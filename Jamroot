import testing ;

project /CmdLineUtil
	: build-dir bb-bin
	: default-build release
	;

exe findext
	:	FileEnumerator.cpp FindFileExt.cpp
		/site-config//BoostHeaderOnlyLibraries
		/site-config//BoostFileSystem/<link>static
		/site-config//GSL
	:	<include>.
		<visibility>hidden
	:	# default build
	:	# usage requirements
	;

exe indents
	:	FileEnumerator.cpp IndentClassifier.cpp
		/site-config//BoostHeaderOnlyLibraries
